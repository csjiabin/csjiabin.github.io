{
  "editor.tabSize": 2,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true
  },
  "prettier.semi": true,
  "eslint.autoFixOnSave": true,
  "beautify.tabSize": 2,
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
